<text>
    @{
        string ruStyle = ViewBag.Culture == "en" ? "label label-default" : "label label-primary";
        string enStyle = ViewBag.Culture == "ru" ? "label label-default" : "label label-primary";
        
        string currentAction = ViewContext.RouteData.Values["action"].ToString();
    }

        @Html.ActionLink("ru", currentAction, new { lang = "ru" }, new { @class = ruStyle})
        @Html.ActionLink("en", currentAction, new { lang = "en" }, new { @class = enStyle })
</text>
